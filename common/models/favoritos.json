{
  "name": "Favoritos",
  "plural": "Favoritos",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "ultimaFecha": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "clientes": {
      "type": "belongsTo",
      "model": "Clientes",
      "foreignKey": "clienteId"
    },
    "productos": {
      "type": "belongsTo",
      "model": "Productos",
      "foreignKey": "productoId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "misFavoritos"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": {
    "misFavoritos": {
      "accepts": [
        {
          "arg": "objetoContexto",
          "type": "object",
          "required": false,
          "description": "El objeto de contexto con los datos del usuario autenticado",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "productosFavoritos",
          "type": "array",
          "root": false,
          "description": "El array de los productos favoritos del Cliente autenticado"
        }
      ],
      "description": "Los favoritos del Cliente autenticado",
      "http": [
        {
          "path": "/misFavoritos",
          "verb": "get"
        }
      ]
    }
  }
}
